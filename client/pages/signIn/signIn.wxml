<!--pages/signIn/signIn.wxml-->
<view class="page">
  <view class='calendar-box'>
    <view class='date-of-today'>
      <text>2018-4-26</text>
    </view>
    <view class='week-group'>
      <view>
        <text>日</text>
      </view>
      <view>
        <text>一</text>
      </view>
      <view>
        <text>二</text>
      </view>
      <view>
        <text>三</text>
      </view>
      <view>
        <text>四</text>
      </view>
      <view>
        <text>五</text>
      </view>
      <view>
        <text>六</text>
      </view>
    </view>
    <view class='dates-group'>
      <block wx:for="{{dates}}">
        <view wx:if="{{item==='12'}}" style='position:relative'>
          <view class='signed-circle'>
            <text>{{item}}</text>
          </view>
        </view>
        <view wx:else>
          <text>{{item}}</text>
        </view>
      </block>
    </view>
  </view>
  <view class='jifen-show'>
    <text>100</text><text>积分</text>
  </view>
  <view class='sign-button'>
    <button>明日签到+2</button>
  </view>
  <view class='sign-days'>
    <text>连续签到1/7天，获取10积分</text>
    <image src='../../resource/images/did-icon.png'></image>
  </view>
</view>