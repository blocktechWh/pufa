/* pages/myPrizes/myPrizes.wxss */

.nav-tabs-container {
  position: relative;
  height: 100rpx;
  background-color: #fff;
}

.nav-tabs-container .slider {
  width: 375rpx;
  height: 100%;
  margin-left: 0;
  background-color: rgb(68, 109, 255);
  transition: margin-left 0.5s;
  -webkit-transition: margin-left 0.5s; /* Safari */
}

.nav-tabs-container .tabs {
  position: absolute;
  width: 750rpx;
  height: 100rpx;
  top: 0;
  left: 0;
}

.nav-tabs-container .tabs>view {
  display: inline-block;
  width: 50%;
  margin: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.nav-tabs-container .tabs>view:first-of-type {
  color: #fff;
}

.nav-tabs-container .tabs>view:nth-child(2) {
  color: rgb(30, 30, 30);
}

.prize-container {
  position: relative;
}

.prize-container>scroll-view {
  position: absolute;
  width: 750rpx;
  top: 0;
  transition: left 0.5s;
  -webkit-transition: 0.5s; /* Safari */
}

.prize-container .prize-got {
  left: 0;
}

.prize-container .prize-no-got {
  left: 750rpx;
}
.prize{
  position: relative;
  height: 150rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.prize>view{
  line-height: 150rpx;
  font-size: 24rpx;
  float: left;
  color: rgb(57, 58, 62);
  height: 100%;
}
.prize>view:first-of-type image{
  width: 100rpx;
  height: 100rpx;
  margin: 25rpx 15rpx;
}
.prize>view:nth-child(3){
  position: absolute;
  font-size: 24rpx;
  right: 30rpx;
  top:0;
}
.prize button{
  position: absolute;
  width: 160rpx;
  height: 60rpx;
  top: 45rpx;
  right: 30rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 24rpx;
 background-color: rgb(68, 109, 255);
}
