/* pages/luckDraw/luckDraw.wxss */

.page {
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.bac-img {
  width: 750rpx;
  height: 100%;
}

.luck-draw-container {
  position: absolute;
  width: 750rpx;
  top: 0;
  left: 0;
}

.runner {
  position: relative;
  width: 560rpx;
  height: 560rpx;
  margin: 124rpx auto;
}

.runner .circle {
  position: relative;
}

.runner .circle .user {
  position: absolute;
  width: 160rpx;
  height: 500rpx;
  background-color: transparent;
  top: 30rpx;
  left: 200rpx;
}

.runner .circle .user image {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 40rpx;
}

.runner .circle, .runner .circle>image {
  width: 100%;
  height: 100%;
}

.runner .arrow {
  position: absolute;
  width: 158rpx;
  left: 201rpx;
  top: 157rpx;
  height: 202rpx;
}

.runner .arrow image {
  width: 100%;
  height: 100%;
}
.my-jifen{
  text-align: center;
  color: #fff;
  font: 30rpx;
}
.game-rule-container {
  position: relative;
  width: 600rpx;
  height: 56rpx;
  margin: 0 auto;
}

.game-rule-container>view:first-of-type {
  position: absolute;
  z-index: 2;
  width: 120rpx;
  height: 36rpx;
  color: rgb(255, 222, 222);
  font-size: 20rpx;
  background-color: rgb(255, 92, 93);
  line-height: 36rpx;
  text-align: center;
  left: 0;
  top: 10rpx;
  border-radius: 0 8rpx 8rpx 0;
}

.game-rule-container>view:nth-child(2) {
  position: absolute;
  z-index: 1;
  width: 580rpx;
  height: 56rpx;
  color: rgb(146, 105, 17);
  font-size: 20rpx;
  background-color: rgb(237, 244, 170);
  line-height: 56rpx;
  text-align: center;
  padding-left: 35rpx;
  right: 0;
  top: 0;
  border-radius: 14rpx;
}

.model-container {
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.model {
  position: relative;
  width: 580rpx;
  height: 454rpx;
  margin: 300rpx auto;

}

.model-scale {
  animation: myfirst 1s;
  -webkit-animation: myfirst 1s; /* Safari and Chrome */
}

@keyframes myfirst {
  from {
    transform: scale(0.5, 0.5);
  }

  to {
    transform: scale(1, 1);
  }
}

@-webkit-keyframes myfirst {
  from {
    transform: scale(0.5, 0.5);
  }

  to {
    transform: scale(0.8, 0.8);
  }
}

.model .result-info {
  position: absolute;
  width: 334rpx;
  text-align: center;
  top: 250rpx;
  left: 123rpx;
  font-size: 28rpx;
  color: rgb(104, 95, 161);
}

.model image:first-of-type {
  width: 100%;
  height: 100%;
}

.model image:nth-child(2) {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -30rpx;
  right: 30rpx;
}

.model button {
  position: absolute;
  width: 200rpx;
  height: 60rpx;
  background-color: rgb(68, 109, 255);
  color: #fff;
  font-size: 28rpx;
  top: 358rpx;
  left: 190rpx;
  line-height: 60rpx;
}
